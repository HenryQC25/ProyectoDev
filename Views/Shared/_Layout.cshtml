<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <!--jquery inicial para datatable-->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.css" />
    <!--boostrap elementos necesarios local y cdn-->
    <!-- Incluye los estilos de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Agrega los scripts de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="~/Content/CustomContent/CustomCSS/Layout/layout.css" rel="stylesheet" />



    <!--datatables cdn-->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.css" />


</head>
<body>

    <header class="header1">

        <div class="logo">
            <a href="/Inicio/PaginaPrincipal"><img src="~/Content/Images/logosPrecredit/PRECREDIT LOGO 2.png" /></a>
        </div>

        <div class="menu2 custom-dropdown">
            <div class="dropdown  dropdown1 ">
                <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Menú
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item " href="/Usuarios/Usuarios">Usuarios</a></li>
                    <li><a class="dropdown-item" href="/Mantenimientos/MantenimientoMenu/Menu">Mantenimiento</a></li>
                    <li><a class="dropdown-item" href="/Proyectos/Proyectos">Proyectos</a></li>
                    <li><a class="dropdown-item" href="/Clientes/Clientes">Clientes</a></li>
                    <li><a class="dropdown-item" href="/Reporteria/Reportes">Reportes</a></li>



                </ul>
            </div>
            <div>
                <label id="lbRolUsuario " class="lbRol">Rol</label>
            </div>
        </div>

        <div class="usuarioOP">
            <img src="~/Content/Images/logosPrecredit/img1perfil.png" />

            <div class="dropdown  dropdownNombre ">
                <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">nombre </button>
                <ul class="dropdown-menu">
                    <li><button class="dropdown-item" type="button">Perfil</button></li>
                    <li><button class="dropdown-item" type="button">Cerrar Sesión</button></li>

                </ul>
            </div>
        </div>
    </header>

    <!-- render body y contenido                                  <li class="list-group-item ctsLista"><a class="list-link" href="#">Encabezado Reportes</a></li>
    -->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <!-- JS necesario local y cdn-->
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/Content/CustomContent/CustomJS/global.js"></script>



    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>

</body>
</html>
